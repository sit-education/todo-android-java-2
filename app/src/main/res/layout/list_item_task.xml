<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin">
        <View
            android:id="@+id/circle_view"
            android:layout_width="@dimen/dot_size"
            android:layout_height="@dimen/dot_size"
            android:background="@drawable/circle"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

        <TextView
            android:id="@+id/task_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/textColorPrimary"
            android:layout_toRightOf="@id/circle_view"
            android:layout_toEndOf="@id/circle_view"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/task_description_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondary"
            android:layout_toRightOf="@id/circle_view"
            android:layout_toEndOf="@id/circle_view"
            android:layout_below="@id/task_title_textview"
            android:singleLine="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_size"
        android:background="@color/separatorColor"/>
</LinearLayout>